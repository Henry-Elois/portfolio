---
import Fleur from "./Fleur.astro";

interface Props {
  projet: any;
  index?: number;
}

const { projet, index = 0 } = Astro.props;

const POCKETBASE_URL =
  import.meta.env.PUBLIC_POCKETBASE_URL || "http://127.0.0.1:8090";

// Récupération de l'image
const imageFile = projet?.image_card;
const collectionId = projet?.collectionId ?? "projets";
const imageUrl = imageFile
  ? `${POCKETBASE_URL}/api/files/${collectionId}/${projet.id}/${imageFile}`
  : "/placeholder-project.png";

// Infos du projet
const titre = projet?.titre ?? "Projet";
const description = projet?.description ?? "";
const annee = new Date(projet?.created || Date.now()).getFullYear();

// Couleurs alternées pour les bordures ET les fleurs
const couleurs = ["primary", "accent", "secondary"];
const couleur = couleurs[index % couleurs.length];

// Couleurs CSS pour les fleurs (pétales et centre)
const fleursConfig = [
  { petal: "var(--color-primary)", centre: "var(--color-secondary)" }, // Rose + Jaune
  { petal: "var(--color-accent)", centre: "var(--color-primary)" }, // Bleu + Rose
  { petal: "var(--color-secondary)", centre: "var(--color-accent)" }, // Jaune + Bleu
];

const fleurConfig = fleursConfig[index % fleursConfig.length];
---

<a
  href={`/projets/${projet?.id}`}
  class={`card-projet card-projet-${couleur} group relative bg-base-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300`}
>
  <!-- Badge année -->
  <div class="absolute top-4 right-4 z-20">
    <div
      class="bg-base-100 rounded-full px-4 py-2 shadow-md border-2 border-gray-200"
    >
      <span class="font-bold text-sm">{annee}</span>
    </div>
  </div>


  <figure class="relative w-50 h-50  overflow-hidden bg-base-200">
    <img src={imageUrl} alt={titre} class="w-full h-full object-cover" />
  </figure>

  <!-- Contenu -->
  <div class="p-6">
    <!-- Fleur + Titre -->
    <div class="flex items-start gap-3 mb-3">
      <div class="flex-shrink-0">
        <Fleur
          petal={fleurConfig.petal}
          centre-fleur={fleurConfig.centre}
          size="48"
        />
      </div>
      <div class="flex-1">
        <h4 class="text-xl md:text-xl font-bold leading-tight">
          {titre}
        </h4>
      </div>
    </div>

    <!-- Description -->
    {
      description && (
        <p class="text-sm text-gray-600 line-clamp-2 mb-4">{description}</p>
      )
    }
  </div>
</a>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-projet {
    border: 4px solid transparent;
    transition: border-color 0.3s ease;
  }

  /* Bordure rose au hover */
  .card-projet-primary:hover {
    border-color: var(--color-primary);
  }

  /* Bordure bleue au hover */
  .card-projet-accent:hover {
    border-color: var(--color-accent);
  }

  /* Bordure jaune au hover */
  .card-projet-secondary:hover {
    border-color: var(--color-secondary);
  }
</style>
