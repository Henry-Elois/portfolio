---
interface Props {
  nom: string;
  icone?: string;
  description: string;
  niveau?: string;
  tags?: string[];
  couleurBordure?: string;
}

const {
  nom,
  icone,
  description,
  niveau,
  tags,
  couleurBordure = "primary",
} = Astro.props;

const couleurClasses = {
  primary: "border-primary",
  secondary: "border-secondary",
  accent: "border-accent",
  warning: "border-warning",
};
---

<div
  class={`card bg-base-100 border-4 ${couleurClasses[couleurBordure]} rounded-3xl p-6 h-full shadow-lg`}
>
  <div class="flex items-start gap-4">
    {
      icone && (
        <div class="w-16 h-16 flex-shrink-0">
          <img
            src={icone}
            alt={`Logo ${nom}`}
            class="w-full h-full object-contain"
          />
        </div>
      )
    }
    <div class="flex-1">
      <h3 class="text-xl font-bold mb-2">{nom}</h3>
      <p class="text-sm text-gray-700 mb-3">{description}</p>
      {
        tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <span class={`badge badge-${couleurBordure} text-xs`}>{tag}</span>
            ))}
          </div>
        )
      }
      {
        niveau && (
          <div class="mt-3">
            <span class="badge badge-outline">{niveau}</span>
          </div>
        )
      }
    </div>
  </div>
</div>
